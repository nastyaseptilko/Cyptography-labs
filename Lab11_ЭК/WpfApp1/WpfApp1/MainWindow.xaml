<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="220" Width="550">
    <Grid>
        <TextBox Name="Sign" FontSize="17px" FontFamily="Comic Sans MS" HorizontalAlignment="Left" Height="60" Margin="10,10,0,0" TextWrapping="Wrap" Text="Sign" VerticalAlignment="Top" Width="240"/>
        <TextBox Name="Verify" FontSize="17px" FontFamily="Comic Sans MS" HorizontalAlignment="Left" Height="60" Margin="280,10,0,0" TextWrapping="Wrap" Text="Verify" VerticalAlignment="Top" Width="240" RenderTransformOrigin="0.947,0.493"/>
        <Button Content="Verify" FontSize="20px" FontFamily="Comic Sans MS" Background="LightGreen" Height="45" Width="200"  HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
