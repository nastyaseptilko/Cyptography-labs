<Window x:Class="Lab06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab06"
        mc:Ignorable="d"
        Title="MainWindow" Height="270" Width="300">
    <StackPanel Margin="30">
        <Label Content="Enter the text to encypt:"  Margin="5"/>
        <TextBox Name="tb_ForEncrypt" Height="30" />
        <Button x:Name="Encypt" Content="Encrypt" Click="Encypt_Click" Height="30" Width="100" Margin="0 5" />
        <Label Content="Result:" />
        <TextBox x:Name="tb_Result" Height="30" Margin="0 5" />
    </StackPanel>
</Window>
